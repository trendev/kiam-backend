<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="DEFAULT_PU" transaction-type="JTA">
        <jta-data-source>java:app/jdbc/MySQLDataSourceComptaNdye</jta-data-source>
        <class>fr.trendev.comptandye.entities.UserAccount</class>
        <class>fr.trendev.comptandye.entities.UserGroup</class>
        <class>fr.trendev.comptandye.entities.Customer</class>
        <class>fr.trendev.comptandye.entities.Professional</class>
        <class>fr.trendev.comptandye.entities.Individual</class>
        <class>fr.trendev.comptandye.entities.Client</class>
        <class>fr.trendev.comptandye.entities.CustomerDetails</class>
        <class>fr.trendev.comptandye.entities.Address</class>
        <class>fr.trendev.comptandye.entities.SocialNetworkAccounts</class>
        <class>fr.trendev.comptandye.entities.Service</class>
        <class>fr.trendev.comptandye.entities.Offering</class>
        <class>fr.trendev.comptandye.entities.Bill</class>
        <class>fr.trendev.comptandye.entities.ClientBill</class>
        <class>fr.trendev.comptandye.entities.PaymentMode</class>
        <class>fr.trendev.comptandye.entities.Payment</class>
        <class>fr.trendev.comptandye.entities.CollectiveGroup</class>
        <class>fr.trendev.comptandye.entities.Administrator</class>
        <class>fr.trendev.comptandye.entities.Category</class>
        <class>fr.trendev.comptandye.entities.Expense</class>
        <class>fr.trendev.comptandye.entities.Business</class>
        <class>fr.trendev.comptandye.entities.IndividualBill</class>
        <class>fr.trendev.comptandye.entities.Pack</class>
        <class>fr.trendev.comptandye.entities.CollectiveGroupBill</class>
        <class>fr.trendev.comptandye.entities.PurchasedOffering</class>
        <properties>
            <!--            Enable SQL Logging-->
            <property name="eclipselink.logging.level" value="FINER"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            
            <!--Drop and create a new tables-->
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.drop-source" value="script"/>
            <property name="javax.persistence.schema-generation.drop-script-source" value="META-INF/sql/comptandye_master-delete.sql"/>
        </properties>
    </persistence-unit>
</persistence>
