<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>comptandye</display-name>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <filter>
        <description>Filters all http/https requests and check session validity</description>
        <filter-name>OverallFilter</filter-name>
        <filter-class>fr.trendev.comptandye.utils.filters.OverallFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter>
        <description>apply Cross Origin Resource Sharing on restapi requests/responses</description>
        <filter-name>CORS</filter-name>
        <filter-class>fr.trendev.comptandye.utils.filters.CORSFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter>
        <description>Cross-Site Request Forgery (XSRF) Filter</description>
        <filter-name>XSRFFilter</filter-name>
        <filter-class>fr.trendev.comptandye.utils.filters.XSRFFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OverallFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CORS</filter-name>
        <url-pattern>/api/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>XSRFFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <listener>
        <description>gets notified about the web app lifecycle changes (startup/shutdown) </description>
        <listener-class>fr.trendev.comptandye.utils.listeners.WebAppServletListener</listener-class>
    </listener>
    <listener>
        <description>tracks sessions lifecycle</description>
        <listener-class>fr.trendev.comptandye.utils.listeners.WebAppSessionListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <!--disable MoxyJson and use Jackson instead -->
        <init-param>
            <param-name>jersey.config.server.disableMoxyJson</param-name>
            <param-value>true</param-value>
        </init-param>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.faces</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>ADMIN_secured_access</display-name>
        <web-resource-collection>
            <web-resource-name>Admin secured pages</web-resource-name>
            <description>admin tools + wadl</description>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/api/application.wadl</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrator</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Secured REST-API</display-name>
        <web-resource-collection>
            <web-resource-name>api</web-resource-name>
            <url-pattern>/api/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>comptandye-security-realm</realm-name>
        <form-login-config>
            <form-login-page>/login_register/login.html</form-login-page>
            <form-error-page>/login_register/error.html</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Administrator</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Professional</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Individual</role-name>
    </security-role>
</web-app>
