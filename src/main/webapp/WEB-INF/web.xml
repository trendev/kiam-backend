    <filter>
        <description>Filters all http/https requests and check session validity</description>
        <filter-name>TraceRequestFilter</filter-name>
        <filter-class>fr.trendev.comptandye.security.filters.TraceRequestFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter>
        <description>apply Cross Origin Resource Sharing on restapi requests/responses</description>
        <filter-name>CORS</filter-name>
        <filter-class>fr.trendev.comptandye.security.filters.CORSFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>TraceRequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CORS</filter-name>
        <url-pattern>/api/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
